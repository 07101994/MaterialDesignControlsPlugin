<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:material="clr-namespace:Plugin.MaterialDesignControls;assembly=Plugin.MaterialDesignControls"
             x:Class="ExampleMaterialDesignControls.Pages.MaterialChipsPage"
             Title="MaterialChips">
    <ContentPage.Resources>
        <Style TargetType="material:MaterialChips">
            <Setter Property="FontSize" Value="{StaticResource FontSize}" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="12,0" />
            <Setter Property="BackgroundColor" Value="#ffffff" />
            <Setter Property="TextColor" Value="#4c6277" />
            <Setter Property="SelectedBackgroundColor" Value="#4c6277" />
            <Setter Property="SelectedTextColor" Value="#ffffff" />
            <Setter Property="DisabledBackgroundColor" Value="#ffffff" />
            <Setter Property="DisabledTextColor" Value="#c6c6c5" />
            <Setter Property="DisabledSelectedBackgroundColor" Value="#c6c6c5" />
            <Setter Property="DisabledSelectedTextColor" Value="#ffffff" />
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Padding="16" Spacing="16">
            <Grid RowSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <material:MaterialChips Grid.Column="0" Grid.Row="0" IsSelected="true" IsEnabled="true" Text="Option A" />
                <material:MaterialChips Grid.Column="1" Grid.Row="0" IsSelected="false" IsEnabled="true" Text="Option B" />
                <material:MaterialChips Grid.Column="2" Grid.Row="0" IsSelected="false" IsEnabled="true" Text="Option C" />
                
                <material:MaterialChips Grid.Column="0" Grid.Row="1" IsSelected="true" IsEnabled="false" Text="Option D" />
                <material:MaterialChips Grid.Column="1" Grid.Row="1" IsSelected="false" IsEnabled="false" Text="Option E" />
                <material:MaterialChips Grid.Column="2" Grid.Row="1" IsSelected="false" IsEnabled="false" Text="Option F" />
                
                <material:MaterialChips Grid.Column="0" Grid.Row="2" CornerRadius="4" IsSelected="true" IsEnabled="true" Text="Option G" />
                <material:MaterialChips Grid.Column="1" Grid.Row="2" CornerRadius="4" IsSelected="false" IsEnabled="true" Text="Option H" />
                <material:MaterialChips Grid.Column="2" Grid.Row="2" CornerRadius="4" IsSelected="false" IsEnabled="true" Text="Option I" />
            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
