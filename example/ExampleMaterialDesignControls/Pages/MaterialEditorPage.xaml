<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:material="clr-namespace:Plugin.MaterialDesignControls;assembly=Plugin.MaterialDesignControls"
             x:Class="ExampleMaterialDesignControls.Pages.MaterialEditorPage"
             Title="MaterialEditor">
    <ContentPage.Content>
        <StackLayout Padding="16" Spacing="16">
            <material:MaterialEditor FieldName="Message" Type="Filled" LabelText="Message" Placeholder="Enter your message"
                                    IsRequired="true" InvalidMessage="The message is required" />
            <material:MaterialEditor Type="Lined" LabelText="Observation" Placeholder="Enter your observation" />
            <material:MaterialEditor Type="Outlined" LabelText="Description" Placeholder="Enter your description" />
            <material:MaterialButton Text="Save" Icon="save.png" Command="{Binding TapCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
