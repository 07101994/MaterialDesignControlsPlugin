<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Plugin.MaterialDesignControls.MaterialPicker">
    <ContentView.Content>
        <StackLayout Spacing="2">
            <Label x:Name="lblLabel" Margin="14,0" />
            <Frame x:Name="frmContainer" HasShadow="false" CornerRadius="4" HeightRequest="40" Padding="12,0" HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="Center">
                    <Image x:Name="imgLeadingIcon" VerticalOptions="Center" HorizontalOptions="End" WidthRequest="24" HeightRequest="24" />
                    <Picker x:Name="pckOptions" VerticalOptions="Center" HorizontalOptions="FillAndExpand" />
                    <Image x:Name="imgTrailingIcon" VerticalOptions="Center" HorizontalOptions="End" WidthRequest="24" HeightRequest="24" />
                </StackLayout>
            </Frame>
            <Label x:Name="lblAssistive" Margin="14,0" />
        </StackLayout>
    </ContentView.Content>
</ContentView>
