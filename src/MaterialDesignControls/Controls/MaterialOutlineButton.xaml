<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Plugin.MaterialDesignControls.MaterialOutlineButton"
             HorizontalOptions="FillAndExpand">
    <ContentView.Content>
        <Frame x:Name="frmContainer" BackgroundColor="Transparent" HasShadow="false" HeightRequest="40" Padding="12,0" HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="Center" HorizontalOptions="Center">
                <Image x:Name="imgIcon" VerticalOptions="Center" HorizontalOptions="End" WidthRequest="24" HeightRequest="24" />
                <Label x:Name="lblText" VerticalOptions="Center" HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>
